{
  "manifest_version": 3,
  "name": "Linkloud",
  "description": "현재 탭의 링크를 쉽고 빠르게 링클라우드에 저장할 수 있도록 도와줍니다!",
  "version": "1.0.3",
  "permissions": ["activeTab", "tabs", "cookies"],
  "host_permissions": ["https://linkloud.xyz/", "http://localhost:3000/"],
  "icons": {
    "16": "/public/icons/icon-16x16.png",
    "48": "/public/icons/icon-48x48.png",
    "128": "/public/icons/icon-128x128.png"
  },
  "action": {
    "default_icon": "/public/icons/icon-128x128.png",
    "default_title": "Linkloud",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
